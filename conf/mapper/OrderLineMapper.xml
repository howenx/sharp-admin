<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.OrderLineMapper">
    <sql id="orderLineColumns">
        ${alias}.line_id,
        ${alias}.order_id,
        ${alias}.sku_id,
        ${alias}.item_id,
        ${alias}.amount,
        ${alias}.price,
        ${alias}.sku_title,
        ${alias}.sku_img,
        ${alias}.split_id,
        ${alias}.sku_size,
        ${alias}.sku_color
    </sql>
    <select id="getLineByOrderId" resultType="entity.OrderLine" parameterType="java.lang.Long">
        select
        <include refid="orderLineColumns">
            <property name="alias" value="t"/>
        </include>
        from sp_order_line t where order_id = ${value}
    </select>

</mapper>