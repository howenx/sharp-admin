<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.StockMapper">

    <!--enable mybatis default cache configure reference:
        https://mybatis.github.io/mybatis-3/zh/sqlmap-xml.html#cache
    -->
    <sql id="stockColumns">
        ${alias}.id,
        ${alias}.prod_id,
        ${alias}.prod_colors productColor,
        ${alias}.prod_size productSize,
        ${alias}.amount productAmount,
        ${alias}.prod_price productPrice,
        ${alias}.recommend_price recommendPrice,
        ${alias}.prod_preview_imgs previewImgs
    </sql>

    <select id="getStock" resultType="entity.Stock" parameterType="java.lang.Long">
        select
        <include refid="stockColumns">
            <property name="alias" value="t"/>
        </include>
        from stock t where id=${value}
    </select>

    <select id="getAllStock" resultType="entity.Stock">
        select
        <include refid="stockColumns">
            <property name="alias" value="t"/>
        </include>
        from stock t where 1=1
    </select>

    <select id="getStocksByProdId" resultType="entity.Stock" parameterType="java.lang.Long">
        select
        <include refid="stockColumns">
                <property name="alias" value="t"/>
        </include>
        from stock t where prod_id=${value}
    </select>

    <insert id="insertStock" parameterType="entity.Stock" useGeneratedKeys="true" keyProperty="id" >
        insert into stock
        (prod_id,prod_colors,prod_size,amount,prod_price,recommend_price,prod_preview_imgs)
        values
        (#{productId},#{productColor},#{productSize},#{productAmount},#{productPrice},#{recommendPrice},#{previewImgs})
    </insert>

</mapper>
