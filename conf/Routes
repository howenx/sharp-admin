# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET				/front                        controllers.Application.welcome
GET				/itemCreate              	  controllers.Item.itemCreate(lang = "cn")
GET				/$lang<(cn|en|kr)>/itemCreate controllers.Item.itemCreate(lang)
GET             /getSubcates                  controllers.Item.getSubCategory
POST            /insertProducts               controllers.Item.insertProducts
GET             /changeLanguage               controllers.Item.changeLanguage
GET             /prodsList                    controllers.Item.prodsList


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#editor
#GET     /editorController			controllers.EditorApplication.editorController()
#POST    /editorController			controllers.EditorApplication.editorController()

# Theme
GET             /slider                       controllers.Theme.slider(lang = "cn")
GET             /$lang<(cn|en|kr)>/slider     controllers.Theme.slider(lang)

GET             /                            controllers.Auth.login
POST            /authenticate                controllers.Auth.authenticate
GET             /logout                            controllers.Auth.logout