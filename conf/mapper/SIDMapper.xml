<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.SIDMapper">
    <!--enable mybatis default cache configure reference:
        https://mybatis.github.io/mybatis-3/zh/sqlmap-xml.html#cache
    -->
    <sql id="sidColumns">
        ${alias}.s_date,
        ${alias}.user_id,
        ${alias}.reg_ip,
        ${alias}.reg_dt
    </sql>

    <!-- 根据日期获取用户信息 -->
    <select id="getSIDBy" resultType="entity.statistics.SID" parameterType="entity.statistics.SID">
        select
            <include refid="sidColumns">
                    <property name="alias" value="t"/>
            </include>
        from "s_id" t where 1=1
        <if test="sDate!=null and sDate!=''">
            and t.s_date = #{sDate}
        </if>
    </select>

    <!-- 获取所有的信息 -->
    <select id="getAllSID" resultType="entity.statistics.SID">
        select
        <include refid="sidColumns">
            <property name="alias" value="t"/>
        </include>
        from "s_id" t where 1=1
    </select>

</mapper>
