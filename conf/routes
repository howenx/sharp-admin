# Routes
# 为了减少merge请覆盖空白行进行添加

# Home page
GET				/front                              controllers.Application.welcome(lang= "cn")
GET				/$lang<(cn|en|kr)>/front            controllers.Application.welcome(lang)
GET				/itemCreate              	        controllers.Item.itemCreate(lang = "cn")
GET				/$lang<(cn|en|kr)>/itemCreate       controllers.Item.itemCreate(lang)
GET             /getSubcates                        controllers.Item.getSubCategory
POST            /insertProducts                     controllers.Item.insertProducts

GET             /prodsList                          controllers.Item.prodsList(lang = "cn")
GET             /$lang<(cn|en|kr)>/prodsList        controllers.Item.prodsList(lang)
GET             /prodsDetail/:id                    controllers.Item.prodsDetail(lang = "cn",id:Long)
GET             /$lang<(cn|en|kr)>/prodsDetail/:id  controllers.Item.prodsDetail(lang,id:Long)










# Map static resources from the /public folder to the /assets URL path
GET             /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)





# Theme--->topic,为了不使url暴露方法名使用topic
GET             /topic/slider                                               controllers.ThemeCtrl.slider(lang = "cn")
GET             /$lang<(cn|en|kr)>/topic/slider                             controllers.ThemeCtrl.slider(lang)
GET             /topic/add                                                  controllers.ThemeCtrl.thadd(lang = "cn")
GET             /$lang<(cn|en|kr)>/topic/add                                controllers.ThemeCtrl.thadd(lang)
POST            /slider/update                                              controllers.ThemeCtrl.sliderSave(lang ="cn")
POST            /$lang<(cn|en|kr)>/slider/update                            controllers.ThemeCtrl.sliderSave(lang)
GET             /topic/search/popup                                         controllers.ThemeCtrl.itemSearchPopup(lang ="cn")
GET             /$lang<(cn|en|kr)>/topic/search/popup                       controllers.ThemeCtrl.itemSearchPopup(lang)
GET             /topic/search                                               controllers.ThemeCtrl.thsearch(lang ="cn")
GET             /$lang<(cn|en|kr)>/topic/search                             controllers.ThemeCtrl.thsearch(lang)
POST            /$lang<(cn|en|kr)>/topic/search/$pageNum<[0-9]+>            controllers.ThemeCtrl.thsearchAjax(lang,pageNum:Int)



















GET             /                                   controllers.Auth.login
POST            /authenticate                       controllers.Auth.authenticate
GET             /logout                             controllers.Auth.logout
GET             /test                               controllers.Test.test
GET             /supply                             controllers.Application.supply











