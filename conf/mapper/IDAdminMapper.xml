<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.IDAdminMapper">

    <!--enable mybatis default cache configure reference:
        https://mybatis.github.io/mybatis-3/zh/sqlmap-xml.html#cache
    -->
    <sql id="idAdminColumns">
        ${alias}.user_id,
        ${alias}.role,
        ${alias}.create_dt,
        ${alias}.status
    </sql>

    <!-- 录入一条用户角色信息 -->
    <insert id="insertIDAdmin" parameterType="entity.IDAdmin">
        insert into ID_ADMIN
        (user_id,role,create_dt,status)
        values
        (#{userId},#{role},CURRENT_TIMESTAMP(0),#{status})
    </insert>

    <!-- 修改用户角色信息 -->
    <update id="updateIDAdmin" parameterType="entity.IDAdmin">
        update ID_ADMIN
        set
        role=#{role},status=#{status}
        where user_id = #{userId}
    </update>

</mapper>
