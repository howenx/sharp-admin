# Routes
# 为了减少merge请覆盖空白行进行添加

# Home page
GET				/front                              controllers.Application.welcome(lang= "cn")
GET				/$lang<(cn|en|kr)>/front            controllers.Application.welcome(lang)
GET				/prodCreate              	        controllers.ProductCtrl.prodCreate(lang = "cn")
GET				/$lang<(cn|en|kr)>/prodCreate       controllers.ProductCtrl.prodCreate(lang)
GET             /getSubcates                        controllers.ProductCtrl.getSubCategory
POST            /insertProducts                     controllers.ProductCtrl.insertProducts

GET             /prodsList/:currentPage             controllers.ProductCtrl.prodsList(lang = "cn",currentPage:Integer)
GET             /$lang<(cn|en|kr)>/prodsList/:currentPage        controllers.ProductCtrl.prodsList(lang,currentPage:Integer)
GET             /prodsDetail/:id                    controllers.ProductCtrl.prodsDetail(lang = "cn",id:Long)
GET             /$lang<(cn|en|kr)>/prodsDetail/:id  controllers.ProductCtrl.prodsDetail(lang,id:Long)










# Map static resources from the /public folder to the /assets URL path
GET             /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)





# Theme--->topic,为了不使url暴露方法名使用topic
GET             /topic/slider                                               controllers.ThemeCtrl.slider(lang = "cn")
GET             /$lang<(cn|en|kr)>/topic/slider                             controllers.ThemeCtrl.slider(lang)
GET             /topic/add                                                  controllers.ThemeCtrl.thadd(lang = "cn")
GET             /$lang<(cn|en|kr)>/topic/add                                controllers.ThemeCtrl.thadd(lang)
POST            /slider/update                                              controllers.ThemeCtrl.sliderSave(lang ="cn")
POST            /$lang<(cn|en|kr)>/slider/update                            controllers.ThemeCtrl.sliderSave(lang)
GET             /topic/search/popup                                         controllers.ThemeCtrl.itemSearchPopup(lang ="cn")
GET             /$lang<(cn|en|kr)>/topic/search/popup                       controllers.ThemeCtrl.itemSearchPopup(lang)
GET             /topic/search                                               controllers.ThemeCtrl.thsearch(lang ="cn")
GET             /$lang<(cn|en|kr)>/topic/search                             controllers.ThemeCtrl.thsearch(lang)
POST            /$lang<(cn|en|kr)>/topic/search/$pageNum<[0-9]+>            controllers.ThemeCtrl.thsearchAjax(lang,pageNum:Int)



















GET             /                                   controllers.Auth.login
POST            /authenticate                       controllers.Auth.authenticate
GET             /logout                             controllers.Auth.logout
GET             /test                               controllers.Test.test
GET             /supply/init                             controllers.Application.supply_init
POST            /supply/init                             controllers.Application.supply_init
POST            /supply/add                             controllers.Application.supply
POST            /supply/update/kr                             controllers.Application.update_kr
GET             /supply/list                       controllers.Application.list_supply(id:Option[Int], start:Int ?=1)
GET             /supply/translation/$id<[0-9]+>           controllers.Application.translation(id:Long)
GET             /supply/append/$id<[0-9]+>           controllers.Application.append(id:Long)
GET             /supply/$id<[0-9]+>                controllers.Application.show(id:Long)
POST            /supply/append/add                 controllers.Application.append_add











